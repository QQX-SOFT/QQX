{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "paths": {
            "@qqx/*": [
                "./shared/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "**/dist/**"
    ]
}